<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:background="#ffffffff" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView   
        android:id="@+id/winner_txt" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="80.0dip" 
        android:layout_gravity="center"         
        android:gravity="center"        
        android:text="winner text" 
        android:textSize="45.0sp"  
        android:textColor="#ff990000"               
        android:fontFamily="sans-serif-condensed" />
    <TextView  
        android:id="@+id/thankyou_txt" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="50.0dip" 
        android:layout_gravity="center"     
        android:gravity="center"             
        android:text="Thanks For Playing!" 
        android:textSize="30.0sp"        
        android:fontFamily="sans-serif-condensed" />
    <TextView 
        android:id="@+id/url_txt" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="20.0dip" 
        android:layout_gravity="center"         
        android:gravity="center"         
        android:text="www.DougLovesMovies.com" 
        android:textSize="20.0sp"         
        android:fontFamily="sans-serif-condensed"
        android:autoLink="web" />
    <Button  
        android:id="@+id/backtomain_btn" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="20.0dip" 
        android:layout_gravity="center"         
        android:gravity="center"         
        android:background="@drawable/customcolor"         
        android:text="Back to Main Menu" 
        android:textSize="22.0sp" 
        android:textColor="#ffffffff"        
        android:onClick="backToMain" />
    <Button 
        android:id="@+id/thanks_btn" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="20.0dip" 
        android:layout_gravity="center"    
        android:background="@drawable/customcolor"              
        android:gravity="center"         
        android:text="Credits" 
        android:textSize="22.0sp" 
        android:textColor="#ffffffff"         
        android:onClick="goToCredits" />
</LinearLayout>